<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transaction Successful</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body { background-color: #f8f9fa; color: #343a40; }
    .navbar { background-color: #28a745; }
    .invoice-card { border-radius: 12px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); background: #fff; padding: 30px; }
    .btn-success { background-color: #28a745; border-color: #28a745; }
    .btn-success:hover { background-color: #218838; border-color: #218838; }
    .success-icon { width: 120px; height: 120px; }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="invoice-card text-center">
          <!-- Inline SVG success icon to avoid missing image files -->
          <div class="d-flex justify-content-center mb-3">
            <svg class="success-icon" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <circle cx="32" cy="32" r="30" fill="#e9f7ef" />
              <path d="M48 20.5L27.5 41 17 30.5" fill="none" stroke="#28a745" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </div>

          <h2 class="text-success mb-2"><%= message || 'Transaction Successful' %></h2>
          <p class="lead text-muted">Thank you for your payment! Your order has been received.</p>

          <div class="d-flex justify-content-center gap-2 mt-3">
            <% if (typeof invoiceUrl !== 'undefined' && invoiceUrl) { %>
              <a href="<%= invoiceUrl %>" class="btn btn-success">View Invoice</a>
            <% } else { %>
              <a href="/orders" class="btn btn-primary">My Orders</a>
            <% } %>
            <a href="/" class="btn btn-outline-secondary">Continue Shopping</a>
          </div>

          <% if (typeof extraInfo !== 'undefined' && extraInfo) { %>
            <div class="mt-4 text-start">
              <h6>Transaction details</h6>
              <pre style="background:#f7f7f7;padding:10px;border-radius:6px;max-height:220px;overflow:auto;"><%= JSON.stringify(extraInfo, null, 2) %></pre>
            </div>
          <% } %>

        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
