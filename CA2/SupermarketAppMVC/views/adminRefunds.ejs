<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Refund Requests</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-4">
    <h2>Pending Refund Requests</h2>
    <a class="btn btn-secondary mb-3" href="/admin/orders">Back to Orders</a>
    <% if (!refunds || refunds.length === 0) { %>
      <div class="alert alert-info">No pending refund requests.</div>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Order</th>
            <th>User ID</th>
            <th>Amount</th>
            <th>Requested At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% refunds.forEach(function(r){ %>
            <tr>
              <td><%= r.id %></td>
              <td><a href="/invoice/<%= r.order_id %>"><%= r.order_id %></a></td>
              <td><%= r.user_id %></td>
              <td>$<%= Number(r.amount).toFixed(2) %></td>
              <td><%= r.created_at || r.requested_at || '' %></td>
              <td>
                <form method="POST" action="/admin/refunds/<%= r.id %>/approve" style="display:inline-block;">
                  <button class="btn btn-success btn-sm">Approve (Full)</button>
                </form>
                <form method="POST" action="/admin/refunds/<%= r.id %>/reject" style="display:inline-block; margin-left:6px;">
                  <button class="btn btn-danger btn-sm">Reject</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
