<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'NETS QR Payment' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
      color: #343a40;
    }
    .navbar {
      background-color: #28a745;
    }
    .navbar .nav-link,
    .navbar .navbar-brand {
      color: #ffffff;
      font-weight: 500;
    }
    .navbar .nav-link:hover {
      color: #d4edda;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h2 class="mb-3"><%= title || 'Scan to Pay' %></h2>
        <p id="status" class="text-muted">Scan with your bank simulator app to complete payment</p>

        <div class="mb-3">
          <img src="<%= qrCodeUrl %>" alt="QR Code" class="img-fluid" style="max-width:320px;" />
        </div>

        <p id="timer" class="lead">Time remaining: 5:00</p>

        <div class="mb-4">
          <img src="/images/netsQrInfo.png" alt="NETS info" style="max-width:360px;" />
        </div>

        <a href="/checkout" class="btn btn-secondary">Cancel / Back to Checkout</a>
      </div>
    </div>
  </div>

<script src="https://unpkg.com/event-source-polyfill"></script>
<script>
    // Keep EventSource instance scoped to this page
    let s2sNetsTxnStatus = null;

    const txnRetrievalRef = "<%= txnRetrievalRef %>";
    const url = `/sse/payment-status/${txnRetrievalRef}`;

    const headers = {
        "api-key": "<%= apiKey %>",
        "project-id": "<%= projectId %>",
    };

    console.log("NETS full response:", <%- JSON.stringify(fullNetsResponse) %>);

    // Initialize EventSourcePolyfill with headers
    try {
        s2sNetsTxnStatus = new EventSourcePolyfill(url, { headers, heartbeatTimeout: 150000 });

        s2sNetsTxnStatus.addEventListener('message', (event) => {
            const data = JSON.parse(event.data);
            console.log('NETS Query Response:', data);

                if (data.success) {
                  if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                  // On success, ask server to finalize the order and then redirect to invoice
                  (async function(){
                    try {
                      const resp = await fetch('/nets-qr/complete', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ txnRetrievalRef: txnRetrievalRef, deliveryFee: <%- JSON.stringify(typeof deliveryFee !== 'undefined' ? deliveryFee : 0) %>, deliveryType: <%- JSON.stringify(typeof deliveryType !== 'undefined' ? deliveryType : 'doorstep') %>, address: <%- JSON.stringify(typeof address !== 'undefined' ? address : '') %> })
                      });
                      const j = await resp.json();
                      if (j && j.success && j.invoiceUrl) {
                        window.location.href = j.invoiceUrl;
                      } else {
                        window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                      }
                    } catch (e) {
                      console.error('Failed to finalize NETS order:', e);
                      window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                    }
                  })();
                } else if (data.fail) {
                  if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                  window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                }
        });
    } catch (err) {
        console.error('Failed to init EventSourcePolyfill', err);
    }

    // Countdown Timer
    const timerElement = document.getElementById('timer');
    const countdownDuration = <%= (typeof timer !== 'undefined' ? timer : 300) %>;
    let remainingTime = countdownDuration;

    const updateTimer = () => {
        const minutes = Math.floor(remainingTime / 60);
        const seconds = remainingTime % 60;
        timerElement.textContent = `Time remaining: ${minutes}:${String(seconds).padStart(2, '0')}`;
        remainingTime--;

        if (remainingTime < 0) {
            clearInterval(timerInterval);
            timerElement.textContent = 'Transaction timed out.';
            if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
            window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
        }
    };

    const timerInterval = setInterval(updateTimer, 1000);
    updateTimer();
</script>

  <%- include('partials/footer') %>
</body>
</html>