<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background-color: #f8f9fa; /* light, fresh background */
      color: #343a40; /* dark text */
    }

    /* Navbar */
    .navbar {
      background-color: #28a745; /* green supermarket theme */
    }

    .navbar .nav-link,
    .navbar .navbar-brand {
      color: #ffffff;
      font-weight: 500;
    }

    .navbar .nav-link:hover {
      color: #d4edda;
    }

    /* Hero/banner */
    .hero {
      background-color: #e9f7ef;
      border-radius: 15px;
      padding: 50px 20px;
      text-align: center;
      margin-bottom: 40px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .hero h1 {
      font-size: 2.5rem;
      color: #28a745;
    }

    .hero p {
      font-size: 1.2rem;
      color: #343a40;
    }

    .btn-primary {
      background-color: #28a745;
      border-color: #28a745;
    }

    .btn-primary:hover {
      background-color: #218838;
      border-color: #218838;
    }

    /* Product cards */
    .card {
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-title {
      font-weight: 600;
    }

    a {
      text-decoration: none;
      color: #28a745;
    }

    a:hover {
      color: #218838;
    }
  </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav ms-auto">
            <% if (!user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/inventory">Inventory</a>
              </li>
              <% if (user.role === 'admin') { %>
                <li class="nav-item">
                  <a class="nav-link" href="/admin/orders">Orders</a>
                </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
        <% if (!user) { %>
            <div class="hero mx-auto" style="max-width: 700px;">
                <h1>Welcome to Supermarket App!</h1>
                <p>Discover fresh products, shop online, and enjoy our amazing deals.</p>
                <a href="/register" class="btn btn-primary me-2">Register</a>
                <a href="/login" class="btn btn-primary">Login</a>
            </div>
        <% } else { %>
            <div class="hero mx-auto" style="max-width: 700px;">
                <h1>Hello, <%= user.username %>!</h1>
                <% if (user.role === "admin") { %>
                    <p>Manage your products in <a href="/inventory">Inventory</a>.</p>
                <% } else { %>
                    <p>Continue browsing products and enjoy shopping!</p>
                <% } %>
                <a href="/inventory" class="btn btn-primary">Go to Products</a>
            </div>
        <% } %>
        </div>
    </div>
</body>
</html>