<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(m){ %>
          <div><%= m %></div>
        <% }) %>
      </div>
    <% } %>
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(e){ %>
          <div><%= e %></div>
        <% }) %>
      </div>
    <% } %>
    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>
                <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                <td>$<%= cart[i].price.toFixed(2) %></td>
                <td>
                  <form action="/cart/update/<%= cart[i].id %>" method="POST" class="d-inline">
                    <input type="number" name="quantity" value="<%= cart[i].quantity %>" min="1" class="form-control d-inline" style="width:100px; display:inline-block;">
                    <button class="btn btn-sm btn-primary" type="submit">Update</button>
                  </form>
                </td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                <td>
                  <form action="/cart/remove/<%= cart[i].id %>" method="POST">
                    <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                  </form>
                </td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% }; %>
        </tbody>
      </table>
      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4">
        <a href="/inventory" class="btn btn-secondary">Back to Products</a>
        <form action="/checkout" method="POST" style="display:inline-block; margin-left:10px;">
          <button type="submit" class="btn btn-success">Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>
