<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Supermarket App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                  <% if (user && user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addProduct">Add new product</a>
                </li> 
                  <% } %>
                  <% if (user) { %>
                    <li class="nav-item">
                      <a class="nav-link" href="/logout">Logout</a>
                    </li>
                  <% } else { %>
                    <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                    </li>
                  <% } %>
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
            <% if (messages && messages.length) { %>
              <div class="alert alert-success">
                <% messages.forEach(function(m){ %>
                  <div><%= m %></div>
                <% }) %>
              </div>
            <% } %>
            <% if (errors && errors.length) { %>
              <div class="alert alert-danger">
                <% errors.forEach(function(e){ %>
                  <div><%= e %></div>
                <% }) %>
              </div>
            <% } %>
            <% if (user) { %>
              <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
            <% } else { %>
              <p>Welcome, Guest</p>
            <% } %>
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (product) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Product Name:</b><br> <%= product.productName %></p>
                <p><b>Product Image:</b><br> <img src = "/images/<%= product.image %>" width="20%"></p>
                <p><b>Product Quantity:</b><br> <%= product.quantity %></p>
                <p><b>Price:</b><br> $<%= product.price.toFixed(2) %></p> 
            </div>
            <% if (user && user.role !== 'admin') { %>
              <div class="mt-3">
                <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-inline">
                  <label for="qty">Quantity</label>
                  <input type="number" id="qty" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="form-control" style="width:120px; display:inline-block; margin-left:10px;">
                  <br>
                  <button class="btn btn-primary mt-2" type="submit" <% if (product.quantity === 0) { %> disabled <% } %>>Add to Cart</button>
                </form>
              </div>
            <% } %>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <% if (user && user.role === "admin") { %>
          <a href ="/inventory">Back</a>
        <% } else { %>
          <a href ="/inventory">Back</a>
        <% } %>
    </div>
    
</body>
</html>
